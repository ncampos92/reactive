{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="center form-border">
            <h1>Iniciar Sesión</h1>
            {# http://symfony.com/doc/current/security/form_login_setup.html #}
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path('login') }}" method="post">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="_email" value="{{ last_email }}" class="form-control" />
                </div>

                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input type="password" id="password" name="_password" class="form-control" />
                </div>

                <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
                <a class="btn btn-default" href="/user/new" role="button">Registrarse</a>
            </form>
        </div>
    </div>
{% endblock %}
