{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="center form-border">
            <h1>Editar Formulario</h1>
            {{ form_start(edit_form) }}
                <div class="form-group">
                    {{ form_errors(edit_form.title) }}
                    {{ form_label(edit_form.title) }}</br>
                    {{ form_widget(edit_form.title, { 'attr': { 'class': 'form-control' } }) }}
                </div>
                <div class="form-group">
                    {{ form_errors(edit_form.description) }}
                    {{ form_label(edit_form.description) }}</br>
                    {{ form_widget(edit_form.description, { 'attr': { 'class': 'form-control' } }) }}
                </div>
                <input class="btn btn-success" type="submit" value="Guardar Cambios" />
            {{ form_end(edit_form) }}

            <div class="delete-form">
                {{ form_start(delete_form) }}
                    <a class="btn btn-default" href="{{ path('appform_index') }}">Ver Formularios</a>
                    <input class="btn btn-danger" type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </div>
        </div>
    </div>
{% endblock %}
