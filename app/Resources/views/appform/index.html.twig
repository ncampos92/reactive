{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/appFormStyles.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="center">
            <h1>Formularios</h1>
            <a class="btn btn-default" href="{{ path('appform_new') }}"><span class="glyphicon glyphicon-plus"></span> Nuevo Formulario</a>
        </div>

        <div class="forms">
            <table class="table-striped custom-table">
                <col width="90%"/>
                <col width="10%"/>
                <tbody>
                {% for appForm in appForms %}
                    <tr>
                        <td>
                            <h4>{{ appForm.title }}</h4>
                            <h6>{{ appForm.description }}</h6>
                        </td>
                        <td class="actions">
                            <ul>
                                <li>
                                    <a class="btn btn-default" href="{{ path('appform_formanswer_new', { 'appform_id': appForm.id }) }}">Responder</a>
                                </li>
                                <li>
                                    <a class="btn btn-primary" href="{{ path('appform_show', { 'id': appForm.id }) }}"><span class="glyphicon glyphicon-eye-open"></span></a>
                                </li>
                                <li>
                                    <a class="btn btn-success" href="{{ path('appform_edit', { 'id': appForm.id }) }}"><span class="glyphicon glyphicon-pencil"></span></a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
