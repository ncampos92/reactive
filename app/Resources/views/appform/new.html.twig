{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="center form-border">
            <h1>Nuevo Formulario</h1>
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_errors(form.title) }}
                    {{ form_label(form.title) }}</br>
                    {{ form_widget(form.title, { 'attr': { 'class': 'form-control' } }) }}
                </div>
                <div class="form-group">
                    {{ form_errors(form.description) }}
                    {{ form_label(form.description) }}</br>
                    {{ form_widget(form.description, { 'attr': { 'class': 'form-control' } }) }}
                </div>
                <input class="btn btn-primary" type="submit" value="Crear Formulario" />
                <a class="btn btn-default" href="{{ path('appform_index') }}">Ver Formularios</a>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
